#!/bin/bash
osdfile=/osdtext

while [ $(pgrep -c teatime) -ne 1 ];do
    sleep .2
done

osdfile=/osdtext
oldtext=$(cat $osdfile)

function countdown(){
for tea in $(seq $tea -1 1);
do
  if [ $check -eq 1 ] && [ $(pgrep -c teatime) -eq 2 ];then
    resetosd
    exit
  fi

  mins=$(($tea/60))
  if [ $mins -eq 0 ]; then
      mintext=
  elif [ $mins -eq 1 ]; then
      mintext="1 minutÄ™ i "
  elif [ $mins -ge 2 ] && [ $mins -le 4 ]; then
      mintext="$mins minuty i "
  else
      mintext="$mins minut i "
  fi
  
  secs=$(($tea%60))
  if [ $secs -eq 1 ]; then
      sectext="1 sekundÄ™"
  elif [ $secs -ge 2 ] && [ $secs -le 4 ]; then
      sectext="$secs sekundy"
  else
      sectext="$secs sekund"
  fi

  echo -e "$text ${mintext}${sectext}\n$oldtext" > $osdfile  
  sleep 1;
done
}

