xcowsay --image=/home/jacek/.local/share/images/tea.png --at=0,460 --bubble-at=-280,-170 --think -t0 "â˜•ğŸ«– jestem gotowa â˜•ğŸ«–" && resetosd
#notify-send -i tea "herbatka" "juÅ¼ jest gotowa" -h string:x-canonical-private-synchronous:teatime ;
#sleep 20
#echo "â˜• ğŸ«–" > /home/jacek/.conky/text/textfile
#sleep 40
#echo "" > /home/jacek/.conky/text/textfile
}

function resetosd(){
  echo "$oldtext" > $osdfile
}

if [ $# -ne 1 ]; then
 tea=`yad --scale --window-icon=tea --image=tea --title "â˜• Tea time â˜•" --width=220 \
 --text="Jak dÅ‚ugo parzyÄ‡ herbatkÄ™?" --text-align=center --undecorated --buttons-layout=edge \
 --min-value=90 --max-value=300 --value=150 --step=5 \
 --mark=1Â½:90 --mark=2:120 --mark=2Â½:150 --mark=3:180 --mark=3Â½:210 --mark=4:240 --mark=4Â½:270 --mark=5:300 `
else
  tea=$1
fi

if [ -z $tea ]; then
  exit
elif [ $tea == "before" ];then
  tea=$(($(date -d 17:00 +%s) - $(date +%s)))
  if [ $tea -lt 0 ];then
    echo -e "5 oâ€™clock juÅ¼ minÄ™Å‚o. WypiÅ‚eÅ› herbatkÄ™?\n${oldtext}" > $osdfile
    sleep 10
    resetosd
    exit 0
  fi
  check=1
  echo "$tea"
  text="Do codziennej ceremonii picia herbatki zostaÅ‚o"
  countdown
  echo -e "Nie bÄ™dzie dzisiaj herbatki?\n${oldtext}" > $osdfile
  sleep 25
  echo -e "No cÃ³Å¼... bez herbatki teÅ¼ siÄ™ da...\n${oldtext}" > $osdfile
  sleep 5
  resetosd
else
  text="herbatka ma siÄ™ parzyÄ‡ jeszcze"
  check=0
  countdown
  teaready
fi


